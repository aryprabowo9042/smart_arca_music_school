{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
  "routes": [
    { "src": "/api/admin/(.*)", "dest": "/api/admin/$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/login.php", "dest": "/api/login.php" },
    { "src": "/logout.php", "dest": "/api/logout.php" },
    { "src": "/(.*)", "dest": "/api/$1" }
  ]
}
